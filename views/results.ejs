<% include header.ejs %>

	<script src="dist/2.7.2/Chart.bundle.js"></script>
	<script src="utils.js"></script>
	<style>
		canvas {
			-moz-user-select: none;
			-webkit-user-select: none;
			-ms-user-select: none;
		}
	</style>
	<div id="canvas-holder" style="width:100%">
		<canvas id="chart-area"></canvas>
	</div>
	<script>
		window.onload = function () {
			var ctx = document.getElementById('chart-area').getContext('2d');
			
			var electionResults = getElectionResults();
			var config = {
			type: 'doughnut',
			data: {
				datasets: [{
					data: [
						electionResults.Tham,
						electionResults.Hew,
						electionResults.Tong,
						electionResults.Liam,
						electionResults.Adrianus,
						electionResults.Sanaam
					],
					backgroundColor: [
						window.chartColors.red,
						window.chartColors.orange,
						window.chartColors.yellow,
						window.chartColors.green,
						window.chartColors.blue,
						window.chartColors.purple
					],
					label: 'Elections'
				}],
				labels: [
					'Tham Zhen Ye',
					'Hew Huey Yee',
					'Tong Joe Yip',
					'Liam Yue Wei',
					'Adrianus Otto',
					'Sanaam'
				]
			},
			options: {
				responsive: true,
				legend: {
					position: 'top',
				},
				title: {
					display: true,
					text: 'Election Poll Results'
				},
				animation: {
					animateScale: true,
					animateRotate: true
				}
			}
		};
		window.myDoughnut = new Chart(ctx, config);
	};
	</script>
	</body>

	</html>